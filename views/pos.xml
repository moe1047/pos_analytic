<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pos_config_form_posa" model="ir.ui.view">
            <field name="name">pos.config.form.view.pos</field>
           <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                  <h2>Analytic Accounting</h2>
                  <div class="row mt16 o_settings_container">
                      <div class="col-xs-12 col-md-6 o_setting_box">
                          <div class="o_setting_right_pane">
                              <label string="Analytic Entries"/>
                              <div class="text-muted">
                                  Configuration for analytic account entries of PoS orders
                              </div>
                              <div class="content-group">
                                <div class="row mt16" title="Analytic Account">
                                    <label string="Analytic Account"
                                           for="account_analytic_id" class="col-md-3 o_light_label"/>
                                    <field name="account_analytic_id"/>
                                </div>
                              </div>
                          </div>
                      </div>
                  </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
